<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snapventuremultiplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaterialTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/MaterialTheme" />
        <activity
            android:name="com.example.snapventuremultiplayer.ui.splash.SplashScreenActivity"
            android:theme="@style/MaterialTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.snapventuremultiplayer.ui.auth.AuthActivity"
            android:theme="@style/MaterialTheme.NoActionBar" />
        <activity
            android:name="com.example.snapventuremultiplayer.ui.auth.forgotpassword.LupaPasswordActivity"
            android:theme="@style/MaterialTheme.NoActionBar" />
    </application>

</manifest>
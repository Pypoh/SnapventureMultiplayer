<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="80dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profilepicture"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintLeft_toRightOf="@id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingLeft="24dp">
            <TextView
                android:id="@+id/namaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player name"
                android:textSize="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/imageView2"/>
            <TextView
                android:id="@+id/levelUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lvl 1"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@id/imageView2"
                app:layout_constraintTop_toBottomOf="@id/namaUser"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pangkat_2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/location_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_info"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/lokasiMain"
            android:paddingBottom="16dp"/>
        <ImageButton
            app:layout_constraintTop_toBottomOf="@id/lokasi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/lokasiMain"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/location" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/location_select">
        <TextView
            android:id="@+id/modeMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Modes"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent" />
        <GridLayout
            app:layout_constraintTop_toBottomOf="@id/modeMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="3"
            android:layout_marginTop="16dp"
            android:id="@+id/listLayout">
            <ImageButton
                android:id="@+id/btn1vs1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/vs1"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/btn2vs2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/vs2"
                app:layout_constraintRight_toLeftOf="@id/btn3vs3"
                app:layout_constraintLeft_toRightOf="@id/btn1vs1"/>
            <ImageButton
                android:id="@+id/btn3vs3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/vs3"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageButton
                android:id="@+id/btncreateRoom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/create"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/btn1vs1"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageButton
                android:id="@+id/btnjoinRoom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/join"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toRightOf="@id/btncreateRoom"
                app:layout_constraintTop_toBottomOf="@id/btn2vs2"
                app:layout_constraintRight_toLeftOf="@id/btnfreeRoom"/>
            <ImageButton
                android:id="@+id/btnfreeRoom"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/freeroam"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/btn3vs3"
                app:layout_constraintRight_toRightOf="parent"/>

        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageButton
        android:id="@+id/btnQuickStart"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/quickmatch"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>